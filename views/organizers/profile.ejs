<header>

        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="text" id="search" placeholder="Search" size="50" )>
</header>
<div id="top" class="d-flex justify-content-center">
    <span class="navbar-text fw-bold mt-2" style="font-size:25px">
        My Sessions
      </span>
      <i class="fa-solid fa-circle-plus p-4 " id="plus" style="font-size:25px" data-bs-toggle="modal" data-bs-target="#exampleModal"></i>
    </div>
<ul id="list-sessions" class="list-group shadow mt-3"> 
  <% userSeshs.forEach(ele=>{%>
        <li class="list-group-item d-flex justify-content-between"><%= ele.dataValues.seshName%> 
          <a href="/submissions/<%=ele.dataValues.seshName%>/<%=ele.dataValues.id%>" ><i class="fa-sharp fa-solid fa-arrow-right" style="color:black;font-size:26px"></i>
        </a>
        <form method="post" action="/submissions/delete">
          <input type="hidden" name="id" value="<%=ele.dataValues.id%>"/>
        <button><i class="fa-solid fa-trash"></i></button>
      </form>
      </li> 
        <%})%> 

       
</ul>
  
<!-- New session form -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add a new session</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div  class="modal-body mt-5">
            <form action="/organizers/new-session" method="POST" id="signUp">
                <div class="mb-2">
                    <label for="seshName" class="form-label">Session name</label>
                    <input type="text" name="seshName" class="form-control" id="seshName" required>
                </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-dark mt-3" >Add a new session</button>

        </div>
      </div>
    </div>
  </div>    
